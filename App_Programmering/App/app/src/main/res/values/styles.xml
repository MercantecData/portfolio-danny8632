<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:title">#000000</item>
        <item name="textcolor">#000000</item>
        <item name="backgroundcolor">@color/colorPrimary</item>
        <item name="backgroundcolorDark">@color/colorPrimaryDark</item>



        // change header color
        <item name="android:textColorSecondary">@color/darkColorPrimaryDark</item>
        // change separator color
        <item name="android:listDivider">@color/darkColorPrimaryDark</item>


    </style>


    <style name="Dark_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryDark">#222222</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:title">#ffffff</item>
        <item name="android:background">#222222</item>
        <item name="android:actionMenuTextColor">#ffffff</item>
        <item name="android:titleTextColor">#ffffff</item>
        <item name="actionMenuTextColor">#ffffff</item>
        <item name="android:color">#ffffff</item>
        <item name="textcolor">#ffffff</item>
        <item name="backgroundcolor">#333333</item>
        <item name="backgroundcolorDark">#222222</item>

        // change header color
        <item name="android:textColorSecondary">@color/white_with_alpha</item>
        // change separator color
        <item name="android:listDivider">@color/white_with_alpha</item>

    </style>

</resources>